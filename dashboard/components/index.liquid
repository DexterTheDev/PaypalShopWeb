<!DOCTYPE html>
<html class="scroll-smooth">

<head>
    {% render 'partials/header.liquid', client: client, user: user %}
</head>

<body class="bg-primary-100 font-body ">
    {% render 'partials/navbar.liquid', client: client, user: user, admin: admin %}
    <div class="md:w-8/12 mx-auto mt-10">
        <div class="container mx-auto flex md:m-auto md:mt-24">
            <div class="mt-20 text-center lg:text-left mx-auto lg:mx-0">
                <h1 class="font-bold text-6xl justify-content">{{ client.config.name }}</h1>
                <p class="font-semibold text-xl text-gray-600 max-w-5xl">{{ client.config.siteDesc }}</p>
                <div class="mt-3">
                    <a href="/products"
                        class="ease-out duration-300 font-semibold text-xl text-primary-600 hover:text-gray-400 justify-content">Search
                        Our Products&nbsp;<i class="fas fa-arrow-right"></i></a>
                </div>
            </div>
            <div class="hidden lg:block ml-auto mt-12">
                <img class="mt-auto w-72 h-72" src="/public/imgs/cr.png">
            </div>
        </div>
        <div class="lg:block border-b border-primary-500 mx-auto md:w-5/12 w-11/12 mt-14 mb-5"></div>
        <div class="mx-auto">
            <p class="font-semibold text-3xl  my-5"><i class="fa-brands fa-rocketchat"></i>&nbsp;Discord Chatting</p>
                <iframe src="https://e.widgetbot.io/channels/{{ client.config.guildID }}/{{ client.config.talkingChannel }}" class="w-full rounded-lg bg-primary-200" height="600"></iframe>
        </div>
        <div onclick="location.href='#features'"
            class="cursor-pointer animate-bounce mx-auto bg-primary-400 p-2 w-10 h-10 ring-1 ring-slate-900/5 mt-7 shadow-lg rounded-full items-center">
            <svg class="w-6 h-6 text-primary-500" fill="none" stroke-linecap="round" stroke-linejoin="round"
                stroke-width="2" viewBox="0 0 24 24" stroke="currentColor">
                <path d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
            </svg>
        </div>
        <div class="lg:block border-b border-primary-500 mx-auto md:w-5/12 w-11/12 mt-14 mb-5"></div>

        <div class="lg:w-8/12 container mx-auto flex lg:px-0 md:px-20 px-5 py-24 md:flex-row flex-col items-center">
            <div class="lg:flex-grow md:w-5/12 flex flex-col md:items-start md:text-left lg:mb-16 md:mb-0 lg:pr-5">
                <h1 class="title-font sm:text-4xl text-3xl mb-4 text-primary-500 font-semibold">{{
                    client.config.ex_cards.card_one.name }}</h1>
                <p class="mb-8 leading-relaxed">{{ client.config.ex_cards.card_one.description }}</p>
            </div>
            <div class="hidden lg:block w-1/3 ease-out-in transition hover:scale-105">
                <img class="object-cover object-center rounded-3xl translate-1 mb-20" alt="banner"
                    src="{{ client.config.ex_cards.card_one.image }}">
            </div>
        </div>

        <div class="lg:block lg:mt-0 border-b border-primary-200 mx-auto md:w-5/12 w-11/12 mt-5"></div>

        <div id="features">
            <div class="lg:w-8/12 container mx-auto flex lg:px-0 md:px-20 px-5 py-24 md:flex-row flex-col items-center">
                <div class="hidden lg:block w-1/3 ease-out-in transition hover:scale-105">
                    <img class="object-cover object-center rounded-3xl mb-20" alt="banner"
                        src="{{ client.config.ex_cards.card_two.image }}">
                </div>
                <div class="lg:flex-grow md:w-5/12 flex flex-col md:items-start text-left lg:mb-16 md:mb-0 lg:pl-20">
                    <h1 class="title-font sm:text-4xl text-3xl mb-4 text-primary-500 font-semibold">{{
                        client.config.ex_cards.card_two.name }}</h1>
                    <p class="mb-8 leading-relaxed">{{ client.config.ex_cards.card_two.description }}</p>
                </div>
            </div>

            <div class="lg:block lg:mt-0 border-b border-primary-200 mx-auto md:w-5/12 w-11/12 mt-5"></div>

            <div class="lg:w-8/12 container mx-auto flex lg:px-0 md:px-20 px-5 py-24 md:flex-row flex-col items-center">
                <div class="lg:flex-grow md:w-5/12 flex flex-col md:items-start md:text-left lg:mb-16 md:mb-0 lg:pr-5">
                    <h1 class="title-font sm:text-4xl text-3xl mb-4 font-semibold text-primary-500">{{
                        client.config.ex_cards.card_three.name }}</h1>
                    <p class="mb-8 leading-relaxed">{{ client.config.ex_cards.card_three.description }}</p>
                </div>
                <div class="hidden lg:block w-1/3 ease-out-in transition hover:scale-105">
                    <img class="object-cover object-center rounded-3xl mb-10" alt="banner"
                        src="{{ client.config.ex_cards.card_three.image }}">
                </div>
            </div>
        </div>
        <div class="flex justify-center items-center mb-10">
            <a href="/products"
                class="ease-out-in text-white duration-300 bg-primary-400 py-5 px-10 rounded-xl drop-shadow-md text-xl  hover:bg-primary-300 hover:text-gray-300">Search
                Our Products</a>
        </div>
    </div>
    <footer>
        {% render 'partials/footer.liquid', client: client %}
    </footer>
</body>

</html>